@model testweb2.Models.StudentsModel
@{
    ViewBag.Title = "ChangeCat";
}
<div class="page-all">
    <div class="form-input">
        <h2>ChangeCat</h2>
        <form action="/student/changecat" method="post">
            <div class="form-input">
                <div class="input-group mb-3 div-border">
                    <div class="mb-3" style="width:100%;">
                        학년 반
                        <div class="mb-2">
                            <hr />
                            <div class="mb-1 category" style="border:1px solid #000000;">
                                <h4>1학년</h4>
                                @for (int i = 1; i <= Model.grade.Class1; i++)
                                {
                                    <div class="form-check form-check-inline">
                                        @if (Session["UserGr"].ToString() == string.Format("1" + "{0:D2}", i))
                                        {
                                            <input class="form-check-input" checked="checked" type="radio" name="radio" value="@string.Format("1"+"{0:D2}",i)">
                                        }

                                        else
                                        {
                                            <input class="form-check-input" type="radio" name="radio" value="@string.Format("1"+"{0:D2}",i)">
                                        }
                                        <label class="form-check-label" for="inlineCheckbox1">1학년 @i 반 </label>
                                    </div>
                                }
                                <h4>2학년</h4>
                                @for (int i = 1; i <= Model.grade.Class2; i++)
                                {
                                    <div class="form-check form-check-inline">
                                        @if (Session["UserGr"].ToString() == string.Format("2" + "{0:D2}", i))
                                        {
                                            <input class="form-check-input" checked="checked" type="radio" name="radio" value="@string.Format("2"+"{0:D2}",i)">
                                        }

                                        else
                                        {
                                            <input class="form-check-input" type="radio" name="radio" value="@string.Format("2"+"{0:D2}",i)">
                                        }
                                        <label class="form-check-label" for="inlineCheckbox1">2학년 @i 반 </label>
                                    </div>
                                }
                                <h4>3학년</h4>
                                @for (int i = 1; i <= Model.grade.Class3; i++)
                                {
                                    <div class="form-check form-check-inline">
                                        @if (Session["UserGr"].ToString() == string.Format("3" + "{0:D2}", i))
                                        {
                                            <input class="form-check-input" checked="checked" type="radio" name="radio" value="@string.Format("3"+"{0:D2}",i)">
                                        }

                                        else
                                        {
                                            <input class="form-check-input" type="radio" name="radio" value="@string.Format("3"+"{0:D2}",i)">
                                        }
                                        <label class="form-check-label" for="inlineCheckbox1">3학년 @i 반 </label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="mb-3" style="width:100%;">
                        과목
                        <div class="mb-2">
                            <hr />
                            @foreach (var item in Model.category.OrderBy(b => b.CatName))
                            {
                                if (string.Compare(item.CatAttribute, "과목") == 0)
                                {
                                    bool check = false;
                                    foreach (var item2 in Model.userCategory)
                                    {
                                        if (item2.CatUSelect == item.CatId) { check = true; }
                                    }
                                    <div class="form-check form-check-inline">
                                        @if (check)
                                        {<input class="form-check-input" type="checkbox" name="Checkbox[]" checked="checked" value="@item.CatId"> }
                                        else
                                        { <input class="form-check-input" type="checkbox" name="Checkbox[]" value="@item.CatId">}
                                        <label class="form-check-label" for="inlineCheckbox1">@item.CatName</label>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                    <div class="mb-3" style="width:100%;">
                        동아리
                        <div class="mb-2">
                            <hr />
                            @foreach (var item in Model.category.OrderBy(b => b.CatName))
                            {
                                if (string.Compare(item.CatAttribute, "동아리") == 0)
                                {
                                    bool check = false;
                                    foreach (var item2 in Model.userCategory)
                                    {
                                        if (item2.CatUSelect == item.CatId) { check = true; }
                                    }
                                    <div class="form-check form-check-inline">
                                        @if (check)
                                        {<input class="form-check-input" type="checkbox" name="Checkbox[]" checked="checked" value="@item.CatId"> }
                                        else
                                        {<input class="form-check-input" type="checkbox" name="Checkbox[]" value="@item.CatId">}
                                        <label class="form-check-label" for="inlineCheckbox1">@item.CatName</label>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                    <div class="mb-3" style="width:100%;">
                        기타
                        <div class="mb-2">
                            <hr />
                            @foreach (var item in Model.category.OrderBy(b => b.CatName))
                            {
                                if (string.Compare(item.CatAttribute, "기타") == 0)
                                {
                                    bool check = false;
                                    foreach (var item2 in Model.userCategory)
                                    {
                                        if (item2.CatUSelect == item.CatId) { check = true; }
                                    }
                                    <div class="form-check form-check-inline">
                                        @if (check)
                                        {<input class="form-check-input" type="checkbox" name="Checkbox[]" checked="checked" value="@item.CatId"> }
                                        else
                                        { <input class="form-check-input" type="checkbox" name="Checkbox[]" value="@item.CatId">}
                                        <label class="form-check-label" for="inlineCheckbox1">@item.CatName</label>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>